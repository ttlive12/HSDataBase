<view class="card" bind:tap="onTap">
  <view class="card-name">
    <text>{{cost}}</text>
    <text>{{name}}</text>
    <text wx:if="{{back}}" class="card-name-back {{back === 'â‹†' ? 'legend' : ''}}">{{back}}</text>
  </view>
  <view class="card-frame">
