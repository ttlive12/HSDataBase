<view class="deck-item {{className}}" bind:tap="onTap">
  <view class="deck-item-header">
    <image class="deck-item-class-icon" src="{{classIcon}}" mode="aspectFill" lazy-load />
    <text>{{deckName}}</text>
  </view>
  <view class="deck-item-stats">
    <text class="deck-item-winrate">{{winrate}}%</text>
    <text class="deck-item-games">{{games}}åœº</text>
  </view>
  <view class="deck-item-dust" wx:if="{{showDust}}">
    <image src="https://www.hsguru.com/images/dust_icon.webp" class="deck-item-dust-icon" />
    <text>{{dust}}</text>
  </view>
  <slot name="extra"></slot>
</view>
